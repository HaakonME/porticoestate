
#---------------------------------------------------------
#
# Table structure for table 'chat_channel'
#

CREATE TABLE chat_channel (
	con int(11) DEFAULT '0' NOT NULL auto_increment,
   name varchar(10) NOT NULL,
   title char(50),
   PRIMARY KEY(con)
);


