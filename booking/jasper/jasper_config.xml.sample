<?xml version="1.0" encoding="UTF-8"?>

<!--
	Rename or make a copy of this file and call the new file jasper_config.xml
	Update the database connection info and change the path to the reports and
	you should be ready to go!
-->

<JasperConfig>

	<Connections>
		<!--  Supported 'db' values: 'MySQL', 'PostgreSQL', 'dummy'  -->
		
		<!-- <Connection name="BK" host="localhost" port="3306"
			db="MySQL" dbname="name" username="root" password="passwd" />  -->
		<Connection name="BK" host="localhost" port="5432" db="PostgreSQL"
			dbname="dbname" username="username" password="password" />


	</Connections>

	<Reports>

		<!-- N.B. No spaces in 'name' -->
		<!-- 'connection' must match name in the connection tag defined above -->
		<!-- 'source' must be an absolute path to the jasper template file (jrxml) -->
	  <Report name="report_participants" connection="BK" source="/absolute/path/participants.jrxml"/>


	</Reports>
	
	<!--  Use the namespace STATIC_  -->
	
	<!-- <StaticData key="STATIC_IMG_DIR" value="/linpro/home/sgs/testjasper/" /> -->


</JasperConfig>
